        iGEM.registerHook('loadHook', async function () {
            await iGEM.loadComponent(iGEM.links.TimelineEntry)
            await iGEM.loadComponent(iGEM.links.BalcansMap)
        })
    </script>
    <%- include('templates/footer'); %>
</body>

</html>